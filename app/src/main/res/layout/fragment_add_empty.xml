<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddEmptyDialog">

    <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chipDate" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>
    <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chipTime"
            app:layout_constraintTop_toBottomOf="@+id/chipDate" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_ok"
            app:layout_constraintTop_toBottomOf="@+id/chipTime" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button_cancel" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_cancel"
            app:layout_constraintTop_toTopOf="@+id/button_ok"
            app:layout_constraintBottom_toBottomOf="@+id/button_ok"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>