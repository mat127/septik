<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:name="com.github.mat127.septik.ui.CurrentStateFragment"
            tools:layout="@layout/fragment_current_state"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/statsFragmentContainerView"
            android:id="@+id/currentStateFragmentView"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:name="com.github.mat127.septik.ui.StatsFragment"
            android:id="@+id/statsFragmentContainerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:layout="@layout/fragment_stats"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>